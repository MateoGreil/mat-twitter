%html
  %head
    %title MatTwitter
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body

    - if @current_user
      = render "navbar/connected"
    - else
      = render "navbar/disconnected"

    %section.container
      = yield