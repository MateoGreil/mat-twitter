.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse
        %ul.nav
          - if @user
            %li= link_to("My profile", user_path(@user))
            %li= link_to("Messages List", messages_path)
            %li= link_to("Users List", users_path)
          - else
            %li= link_to("Sign up", { controller: "users", action: "new" })
            %li= link_to("Sign in", messages_path)