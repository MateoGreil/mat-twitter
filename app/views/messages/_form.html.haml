= form_for @message, html: { class: "form form-horizontal message" } do |f|
  .form-group
    = f.label :text, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :text, class: 'form-control', required: true
    = f.error_span(:text)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), messages_path, :class => 'btn btn-default'
